WRSMCONF="/platform/sun4u/sbin/wrsmconf"

if [ "${BASEDIR:=/}" = "/" ]
then
	REM_DRV="rem_drv"
else
	REM_DRV="rem_drv -b ${BASEDIR}"
fi

if [ "${PKG_INSTALL_ROOT:-/}" = "/" ]; then
	# Remove any controllers
	if [ -f $WRSMCONF ]; then
		$WRSMCONF remove
	fi
fi

$REM_DRV wrsm

exit 0
