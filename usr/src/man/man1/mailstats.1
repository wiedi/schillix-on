.mk
.na
.B /etc/mail/statistics
.ad
.RS 25n
.rt
Default
.B sendmail
statistics file
.RE

.sp
.ne 2
.mk
.na
\fB/etc/mail/sendmail.cf\fR
.ad
.RS 25n
.rt
Default
.B sendmail
configuration file
.RE

