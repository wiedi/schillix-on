#ident	"%Z%%M%	%I%	%E% SMI"
 
PATH="/usr/bin:/usr/sbin:/sbin:${PATH}"
export PATH
RDS_SOCK_ENTRY="        30      1       0       /dev/rds"

if [ "${BASEDIR:=/}" != "/" ]
then
	BASEDIR_OPT="-b $BASEDIR"
fi

not_installed() {
	driver=$1
	grep "^${driver} " $BASEDIR/etc/name_to_major > /dev/null 2>&1
	return $?
}

EXIT=0

not_installed rds || add_drv ${BASEDIR_OPT} -m '* 0644 root sys' rds || EXIT=1

not_installed rdsib || add_drv ${BASEDIR_OPT} -m '* 0644 root sys' \
	rdsib || EXIT=1

# Check rds entry exists in sock2path
egrep "$RDS_SOCK_ENTRY" $BASEDIR/etc/inet/sock2path > /dev/null 2>&1
if [ $? -ne 0 ]
then
	echo "$RDS_SOCK_ENTRY" >> $BASEDIR/etc/inet/sock2path
	if [ "${BASEDIR:=/}" = "/" ]
	then
		soconfig $RDS_SOCK_ENTRY || EXIT=1
	fi
fi

exit $EXIT
