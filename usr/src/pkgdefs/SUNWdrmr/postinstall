# SUNWdrmr postinstall script

PATH=/usr/bin:/usr/sbin:${PATH}
export PATH

# the following ids are sorted in numeric order
BRALIAS="\
	\"pci8086,2562\" \
	\"pci8086,2572\" \
	\"pci8086,2582\" \
	\"pci8086,2592\" \
	\"pci8086,3582\" \
	"
DRVPERM='* 0644 root sys'

installed() {
	driver=$1
	grep "^[	 ]*${driver}\>" $BASEDIR/etc/name_to_major > \
		/dev/null 2>&1
	return $?
}

EXIT=0

installed i915 || \
add_drv -b "${BASEDIR}" \
	-m "${DRVPERM}" \
	-i "${BRALIAS}" \
	i915 || \
EXIT=1

exit ${EXIT}
