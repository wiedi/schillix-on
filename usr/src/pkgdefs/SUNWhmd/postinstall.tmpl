include drv_utils
EXIT=0

#
# We could probably also do SB600, pci1002,4382, but we don't have any
# hardware to confirm with.
#
case "${ARCH}" in
    sparc)
        pkg_drvadd -i '"SUNW,hme"' hme || EXIT=1
	pkg_drvadd -i '"SUNW,fas"' fas || EXIT=1
	;;
    i386)
        pkg_drvadd -i '"pci108e,1001"' hme || EXIT=1
	;;
esac

exit ${EXIT}
