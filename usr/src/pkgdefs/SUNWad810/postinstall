# SUNWad810 postinstall script

PATH=/usr/bin:/usr/sbin:${PATH}
export PATH

not_installed() {
	driver=$1
	grep "^${driver} " $BASEDIR/etc/name_to_major > /dev/null 2>&1
	return $?
}

EXIT=0

I810_ALIASES="\
	\"pci1022,746d\" \
	\"pci8086,2485\" \
	\"pci8086,24c5\" \
	\"pci8086,24d5\" \
	\"pci8086,266e\" \
	\"pci10de,6a\" \
	\"pci10de,da\" \
	\"pci10de,ea\" \
	\"pci10de,59\" \
	\"pci10de,3a\" \
	"
	
case "${ARCH}" in
	i386)
		not_installed audio810 || \
		add_drv -b "${BASEDIR}" -i "${I810_ALIASES}" -n audio810 || \
		EXIT=1

	;;
esac

exit ${EXIT}
